<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Enerj.io Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .main-content {
            min-height: 100vh;
            background: #f8f9fa;
            padding: 2rem;
        }
        .post-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .post-status {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
            border-radius: 999px;
        }
        .status-published {
            background-color: #e3fcef;
            color: #0d9488;
        }
        .status-draft {
            background-color: #fef3c7;
            color: #b45309;
        }
        .btn-action {
            margin-left: 8px;
        }
        .btn-publish {
            background-color: #0d9488;
            color: white;
            border: none;
        }
        .btn-publish:hover {
            background-color: #0f766e;
            color: white;
        }
        .btn-edit {
            background-color: #2563eb;
            color: white;
            border: none;
        }
        .btn-edit:hover {
            background-color: #1d4ed8;
            color: white;
        }
        .btn-delete {
            background-color: #dc2626;
            color: white;
            border: none;
        }
        .btn-delete:hover {
            background-color: #b91c1c;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid px-0">
        <div class="main-content">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4>Blog Yazıları</h4>
                    <div>
                        <a href="/admin/new-post" class="btn btn-primary me-2">
                            Yeni Yazı Ekle
                        </a>
                        <form action="/admin/logout" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger">
                                Çıkış Yap
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Posts List -->
                <div class="row">
                    <% posts.forEach(post => { %>
                        <div class="col-12 mb-3">
                            <div class="post-card p-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5><%= post.title %></h5>
                                        <small class="text-muted">
                                            <% 
                                            try {
                                                const date = post.createdAt?.toDate ? post.createdAt.toDate() : new Date(post.createdAt);
                                            %>
                                                <%= date.toLocaleDateString('tr-TR', { 
                                                    year: 'numeric', 
                                                    month: 'long', 
                                                    day: 'numeric'
                                                }) %>
                                            <% } catch (error) { %>
                                                Tarih bilgisi yok
                                            <% } %>
                                        </small>
                                        <span class="ms-2 post-status <%= post.published ? 'status-published' : 'status-draft' %>">
                                            <%= post.published ? 'Yayında' : 'Taslak' %>
                                        </span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <% if (!post.published) { %>
                                            <form action="/admin/posts/<%= post.id %>/toggle" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-publish">
                                                    Yayınla
                                                </button>
                                            </form>
                                        <% } %>
                                        <a href="/admin/edit-post/<%= post.id %>" class="btn btn-sm btn-edit ms-2">
                                            Düzenle
                                        </a>
                                        <form action="/admin/posts/<%= post.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Bu yazıyı silmek istediğinizden emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-delete ms-2">
                                                Sil
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
