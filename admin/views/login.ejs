<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
        }
        .login-container {
            max-width: 400px;
            width: 90%;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .btn-google {
            background-color: #fff;
            color: #757575;
            border: 1px solid #ddd;
            padding: 0.5rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
        }
        .btn-google:hover {
            background-color: #f8f9fa;
            border-color: #ddd;
        }
        .btn-google img {
            width: 20px;
            height: 20px;
        }
        .error-message {
            display: none;
            color: #dc3545;
            margin-top: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="login-container mx-auto">
                    <h2 class="text-center mb-4">Admin Girişi</h2>
                    <p class="text-center text-muted mb-4">
                        Sadece @enerj.io uzantılı e-postalar ile giriş yapabilirsiniz.
                    </p>
                    
                    <div class="text-center">
                        <button id="googleLogin" class="btn btn-google w-100">
                            <img src="https://www.google.com/favicon.ico" alt="Google">
                            Google ile Giriş Yap
                        </button>
                    </div>
                    
                    <div id="error-message" class="error-message"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Firebase SDK'ları -->
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth-compat.js"></script>

    <script>
        // Firebase yapılandırması
        const firebaseConfig = {
            apiKey: "AIzaSyB84ol0Fu-nJtU8I5S8dajMFVjhgdyFQ8Y",
            authDomain: "enerjio-website.firebaseapp.com",
            projectId: "enerjio-website",
            storageBucket: "enerjio-website.firebasestorage.app",
            messagingSenderId: "71871281855",
            appId: "1:71871281855:web:6d198285f5d37495e1a40a",
            measurementId: "G-LR8RX0VYF3"
        };

        // Firebase'i başlat
        if (!firebase.apps.length) {
            firebase.initializeApp(firebaseConfig);
        }

        // Google provider
        const provider = new firebase.auth.GoogleAuthProvider();
        provider.setCustomParameters({
            hd: 'enerj.io',
            prompt: 'select_account'
        });

        // Google ile giriş işlemi
        document.getElementById('googleLogin').addEventListener('click', async () => {
            try {
                // Popup açılmadan önce loading göstergesi ekleyelim
                const button = document.getElementById('googleLogin');
                button.disabled = true;
                button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Giriş yapılıyor...';

                // Popup ile giriş yapalım
                const result = await firebase.auth().signInWithPopup(provider);
                
                // Başarılı girişten sonra popup'ı hemen kapatalım
                if (result.user) {
                    window.close();
                }
            } catch (error) {
                console.error('Login error:', error);
                showError('Giriş işlemi sırasında bir hata oluştu');
            } finally {
                // Hata olsa da olmasa da butonu eski haline getirelim
                const button = document.getElementById('googleLogin');
                button.disabled = false;
                button.innerHTML = '<img src="https://www.google.com/favicon.ico" alt="Google"> Google ile Giriş Yap';
            }
        });

        // Auth state değişikliklerini dinle
        firebase.auth().onAuthStateChanged(async function(user) {
            // Çıkış yapıldığını kontrol et
            const isLogoutPage = new URLSearchParams(window.location.search).get('logout') === 'true';
            
            if (user && !isLogoutPage) {
                try {
                    const idToken = await user.getIdToken();
                    const response = await fetch('/admin/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify({ idToken: idToken }),
                        credentials: 'include'
                    });
                    
                    const data = await response.json();
                    if (data.success) {
                        window.location.href = '/admin/dashboard';
                    } else {
                        await firebase.auth().signOut();
                        showError(data.message || 'Giriş başarısız');
                    }
                } catch (error) {
                    console.error('Login error:', error);
                    showError('Giriş işlemi sırasında bir hata oluştu');
                    await firebase.auth().signOut();
                }
            }
        });

        // Hata mesajını göster
        function showError(message) {
            const errorDiv = document.getElementById('error-message');
            if (errorDiv) {
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
            }
        }
    </script>
</body>
</html>
